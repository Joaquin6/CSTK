<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="6.0" ExtensionBundleId="com.creative-scripts.cstk.bundle.1" ExtensionBundleVersion="2.0.0" ExtensionBundleName="Extension-Name" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Author>Trevor http://www.creative-scripts.com</Author>
    <Legal>Written under the do not complain do not sue license</Legal>
    <Abstract>CSTK Provides a Scratch Pad for messing around with. Even less useful than the ESTK</Abstract>
    <ExtensionList>
        <Extension Id="com.creative-scripts.cstk.1" Version="8.0.0" />
    </ExtensionList>
    <ExecutionEnvironment>
        <HostList>
            <!-- This is for CC2015 onwards -->
            <!-- Uncomment Host tags according to the apps you want your panel to support -->
            <!-- Photoshop Extended -->
            <Host Name="PHXS" Version="10" /> <!-- Tested -->
            <!-- Photoshop -->
            <!-- <Host Name="PHSP" Version="10" /> -->
            <!-- Illustrator -->
            <Host Name="ILST" Version="19" /> <!-- Tested -->
            <!-- InDesign -->
            <Host Name="IDSN" Version="11" /> <!-- Tested -->
            <!-- InCopy -->
            <Host Name="AICY" Version="11" /> <!-- Not Tested but sould be the same as InDesign-->
            <!-- Premiere -->
            <Host Name="PPRO" Version="9" /> <!-- Tested -->
            <!-- AfterEffects -->
            <Host Name="AEFT" Version="13" /> <!-- Tested -->
            <!-- PRELUDE -->
            <Host Name="PRLD" Version="4" /> <!-- Not Tested -->
            <!-- FLASH Pro -->
            <Host Name="FLPR" Version="15" /> <!-- Not Tested -->
            <!-- Audition -->
            <Host Name="AUDT" Version="8" /> <!-- Not Tested -->
            <!-- Dreamweaver -->
            <Host Name="DRWV" Version="16" /> <!-- JSX Console doesn't work JS, Shell and other features work look like they work -->
            <!-- Muse -->
            <Host Name="MUSE" Version="2017" /> <!-- Not showing up -->
            <!-- Bridge -->
            <Host Name="KBRG" Version="[8.0,99.9]" /> <!-- Not showing up -->
            <Host Name="BRDG" Version="[8.0,99.9]" /> <!-- Not showing up -->
        </HostList>
        <LocaleList>
            <Locale Code="All" />
        </LocaleList>
        <RequiredRuntimeList>
            <RequiredRuntime Name="CSXS" Version="6.0" />
        </RequiredRuntimeList>
    </ExecutionEnvironment>
    <DispatchInfoList>
        <Extension Id="com.creative-scripts.cstk.1">
            <DispatchInfo>
                <Resources>
                    <MainPath>./html/index.html</MainPath>
                    <!-- we are using JSX.js so we don't use ScriptPath -->
                    <!-- <ScriptPath>./jsx/host.js</ScriptPath> -->
                    <CEFCommandLine>
                        <Parameter>--enable-nodejs</Parameter>
                        <Parameter>--mixed-context</Parameter>
                    </CEFCommandLine>
                </Resources>
                <Lifecycle>
                    <AutoVisible>true</AutoVisible>
                    <StartOn>
                        <!-- <Event>applicationActivate</Event> -->
                        <!-- <Event>documentAfterActivate</Event> -->
                    </StartOn>
                </Lifecycle>
                <UI>
                    <Type>Panel</Type>
                    <Menu>CSTK</Menu>
                    <Geometry>
                        <Size>
                            <Height>640</Height>
                            <Width>600</Width>
                        </Size>
                        <MinSize>
                            <Height>300</Height>
                            <Width>300</Width>
                        </MinSize>
                        <MaxSize>
                            <Height>10000</Height>
                            <Width>10000</Width>
                        </MaxSize>
                    </Geometry>
                    <Icons>
                        <Icon Type="Normal">./icons/terminal.png</Icon>
                        <Icon Type="RollOver">./icons/terminal.png</Icon>
                        <Icon Type="Disabled">./icons/terminal.png</Icon>
                        <Icon Type="DarkNormal">./icons/terminalDark.png</Icon>
                        <Icon Type="DarkRollOver">./icons/terminalDark.png</Icon>
                    </Icons>
                </UI>
            </DispatchInfo>
        </Extension>
    </DispatchInfoList>
</ExtensionManifest>